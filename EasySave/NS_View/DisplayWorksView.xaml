<Page x:Class="EasySave.NS_View.DisplayWorksView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:viewModel="clr-namespace:EasySave.NS_ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DisplayWorksView">

    <Page.DataContext>
        <viewModel:ViewModel></viewModel:ViewModel>
    </Page.DataContext>

    <Grid>

       
        
        <Grid Background="Pink" Grid.Column=" 1" >
            <ListView ItemsSource="{Binding works}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding name}" Header="Name" Width="100"></GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding src}" Header="Source" Width="250"></GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding dst}" Header="Destination" Width="250"></GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding backupType}" Header="Backup Type" Width="150"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Page>
